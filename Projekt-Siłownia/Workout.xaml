<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt_Siłownia.Workout" Style="{StaticResource ContentPageStyle}">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Button Text="Wstecz" Clicked="GoBack_Clicked"/>
            <Label Text="Workout Page" HorizontalOptions="Center" FontSize="24"/>
            <Label x:Name="exerciseLabel" Text="Ćwiczenie" HorizontalTextAlignment="Center" FontSize="18"/>
            <Label x:Name="muscleLabel" Text="Partia mięśniowa" HorizontalTextAlignment="Center" FontSize="16"/>
            <Label x:Name="noteLabel" Text="" HorizontalTextAlignment="Center" FontSize="16"/>
            

            <Label Text="Ciężar"/>
            <Entry x:Name="weightEntry" Keyboard="Numeric"/>

            <Label Text="Powtórzenia"/>
            <Entry x:Name="repsEntry" Keyboard="Numeric"/>

            <Label Text="RPE"/>
            <Entry x:Name="rpeEntry" Keyboard="Numeric"/>

            <HorizontalStackLayout>
                <Button Text="➖" Clicked="DecreaseSeries"/>
                <Label x:Name="seriesLabel" Text="Serie: 3" FontSize="16" VerticalTextAlignment="Center"/>
                <Button Text="➕" Clicked="IncreaseSeries"/>
            </HorizontalStackLayout>

            <Button Text="Zapisz" HorizontalOptions="Center" Clicked="Button_Clicked"/>
        </VerticalStackLayout>

    </ContentPage.Content>
</ContentPage>