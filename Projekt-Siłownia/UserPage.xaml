<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt_Siłownia.UserPage"
             Title="UserPage" Style="{StaticResource ContentPageStyle}"
             NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout>
        <Label Text="Strona główna" Padding="20" HorizontalOptions="Center" VerticalOptions="Center" FontSize="24"></Label>
        
        <Picker ItemDisplayBinding="{Binding DisplayText}" x:Name="TreningPicker"/>
        <Button Text="Rozpocznij Trening" Clicked="Start_Clicked"/>
        <Button x:Name="Progress" Clicked="Progress_Clicked" Text="Postępy" HorizontalOptions="Center"></Button>
        
        <Label Text="Moje Karnety"/>
        <VerticalStackLayout>
            <Label x:Name="Rodzaj"/>
            <Label x:Name="Data"/>
            <Button Text="Kup Karnet" Clicked="OdnowButton_Clicked"/>
        </VerticalStackLayout>
        
        <Button x:Name="ChangeAccInfo" Text="Zmień dane konta" Clicked="ChangeAccInfo_Clicked" />
        <Button Text="Wyloguj Się" Clicked="LogOutClicked"/>
    </VerticalStackLayout>
</ContentPage>