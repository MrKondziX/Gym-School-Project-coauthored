<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="ContentPage" x:Key="ContentPageStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}"></Setter>
    </Style>
    
    <Style TargetType="VerticalStackLayout">
        <Setter Property="HorizontalOptions" Value="Center"></Setter>
        <Setter Property="Spacing" Value="10"></Setter>
    </Style>

    <Style TargetType="HorizontalStackLayout">
        <Setter Property="HorizontalOptions" Value="Center"></Setter>
    </Style>
    
    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource TextColor}"></Setter>
        <Setter Property="WidthRequest" Value="200"></Setter>
        <Setter Property="HorizontalOptions" Value="Center"></Setter>
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}"></Setter>
    </Style>

    <Style TargetType="Frame">
        <Setter Property="Margin" Value="20"></Setter>
        <Setter Property="Padding" Value="30"></Setter>
        <Setter Property="BackgroundColor" Value="{StaticResource MainColor}"></Setter>
        <Setter Property="CornerRadius" Value="10"></Setter>
        <Setter Property="VerticalOptions" Value="Center"></Setter>
        <Setter Property="HorizontalOptions" Value="Center"></Setter>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource TextColor}"></Setter>
        <Setter Property="WidthRequest" Value="300"></Setter>
    </Style>

    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{StaticResource TextColor}"></Setter>
        <Setter Property="WidthRequest" Value="250"></Setter>
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}"></Setter>
    </Style>
    
</ResourceDictionary>
