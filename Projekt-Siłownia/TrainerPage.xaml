<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt_Siłownia.TrainerPage"
             Title="TrainerPage" Style="{StaticResource ContentPageStyle}">
    <VerticalStackLayout>
        <Label Text="Trainer Page"/>
        <Button Text="Wyloguj Się" Clicked="LogOutClicked"/>
        <HorizontalStackLayout>
            <Label Text="Witaj, " />
            <Label Text="{Binding TrainerName}" FontAttributes="Bold"/>
        </HorizontalStackLayout>
        <Label Text="Lista Użytkowników:" FontAttributes="Bold" Margin="0,10,0,0"/>
        <ListView x:Name="UsersListView" 
                  ItemsSource="{Binding Users}" 
                  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Spacing="10" Padding="5">
                            <Label Text="{Binding UsersId}" WidthRequest="30" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding UsersName}" WidthRequest="80"/>
                            <Label Text="{Binding UsersSurname}" WidthRequest="100"/>
                            <Label Text="{Binding UsersEmail}" WidthRequest="160"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label Text="Kliknij na użytkownika, a następnie przypisz mu trening." FontAttributes="Italic" Margin="0,10,0,0"/>
        <Button x:Name="AssignWorkout" Text="Przypisz trening" Margin="0, 10, 0, 0" Clicked="AssignWorkout_Clicked" />
        <Button x:Name="ChangeAccInfo" Text="Zmień dane konta" Clicked="ChangeAccInfo_Clicked" />
    </VerticalStackLayout>
</ContentPage>