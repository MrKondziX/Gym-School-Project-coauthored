<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt_Siłownia.RegisterPage"
             BackgroundColor="Black"
             Title="Zarejestruj Się" Style="{StaticResource ContentPageStyle}">

        <Grid RowDefinitions="Auto, *" ColumnDefinitions="*">
            <Frame Grid.Row="1"
                   Margin="20"
                   BackgroundColor="Gray"
                   CornerRadius="10"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Padding="30">

                <VerticalStackLayout Spacing="15" HorizontalOptions="Center">

                <!-- Nagłówek -->
                <Label Text="REJESTRACJA"
                           FontSize="28"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="Black"/>

                <!-- Imię -->
                <Entry Placeholder="Imię"
                           BackgroundColor="White"
                           TextColor="Black"
                           WidthRequest="250"
                           x:Name="NameEntry"/>

                <!-- Nazwisko -->
                <Entry Placeholder="Nazwisko"
                           BackgroundColor="White"
                           TextColor="Black"
                           WidthRequest="250"
                           x:Name="SurnameEntry"/>

                <Entry Placeholder="login"
                       BackgroundColor="White"
                       TextColor="Black"
                       WidthRequest="250"
                       x:Name="LoginEntry"/>

                <!-- E-mail -->
                <Entry Placeholder="E-mail"
                           Keyboard="Email"
                           BackgroundColor="White"
                           TextColor="Black"
                           WidthRequest="250"
                           x:Name="EmailEntry"/>

                <!-- Hasło -->
                <Entry Placeholder="Hasło"
                           IsPassword="True"
                           BackgroundColor="White"
                           TextColor="Black"
                           WidthRequest="250"
                           x:Name="PassEntry"/>

                <!-- Powtórz hasło -->
                <Entry Placeholder="Powtórz hasło"
                           IsPassword="True"
                           BackgroundColor="White"
                           TextColor="Black"
                           WidthRequest="250"
                           x:Name="RepeatPassEntry"/>

                <!-- Przycisk rejestracji -->
                <Button Text="Zarejestruj się"
                            BackgroundColor="LightGray"
                            TextColor="Black"
                            HorizontalOptions="Center"
                            Margin="0,10,0,0"
                            Clicked="RegisterButtonClicked"/>

                <!-- Link do logowania -->
                <Button Text="Masz już konto? Zaloguj się"
                           BackgroundColor="LightGray"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"   
                           Clicked="AlreadyHaveAnAccount"/>
            </VerticalStackLayout>
            </Frame>
        </Grid>
</ContentPage>